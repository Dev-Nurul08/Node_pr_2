<!doctype html>
<html lang="en">

<head>
    <title>Task Manager Pro</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #1e1e2f 0%, #111119 100%);
            color: white;
            min-height: 100vh;
        }

        .card-custom {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
        }

        .table {
            color: #fff;
        }

        .btn-primary {
            background: #624bff;
            border: none;
        }

        .btn-primary:hover {
            background: #5138ed;
        }
        ::placeholder{
            color: rgb(221, 57, 57);
            font-weight: 600;
        }

    </style>
</head>

<body>
    <div class="container py-5">
        <div class="row mb-5 text-center">
            <div class="col-lg-8 mx-auto">
                <h1 class="display-4 fw-bold text-transparent bg-clip-text"
                    style="background: linear-gradient(to right, #624bff, #ff4baf); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                    Task Manager</h1>
                <p class="text-secondary lead">Manage your workflow with style</p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card-custom p-4 mb-5">
                    <form action="/add" method="POST">
                        <div class="row g-3">
                            <div class="col-md-7">
                                <input type="text" name="text" class="form-control text-white border-secondary "
                                    placeholder="What needs to be done?" required />
                            </div>
                            <div class="col-md-3">
                                <input type="date" name="dueDateTime"
                                    class="form-control bg-dark text-white border-secondary" required />
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-primary w-100" type="submit">Add</button>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="card-custom p-0 overflow-hidden">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th class="ps-4">#</th>
                                <th>Task</th>
                                <th>Due Date</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% tasks.forEach((task, index)=> { %>
                                <tr>
                                    <td class="ps-4 text-secondary">
                                        <%= index + 1 %>
                                    </td>
                                    <td class="fw-bold">
                                        <%= task.text %>
                                    </td>
                                    <td class="text-info">
                                        <%= new Date(task.dueDate).toLocaleDateString() %>
                                    </td>
                                    <td class="text-center">
                                        <a href="/edit/task/<%= task.id %>"
                                            class="btn btn-sm btn-outline-warning mx-1">Edit</a>
                                        <a href="/delete/task?id=<%= task.id %>"
                                            class="btn btn-sm btn-outline-danger mx-1">Delete</a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>

</html>